import java.util.Random;

import javax.swing.JOptionPane;


public class Primitive_BlackJack
{
public static void main(String[] args)
{
		int number1 = new Random().nextInt(9);
		int number2 = new Random().nextInt(9);
		JOptionPane.showMessageDialog(null, number1 + number2 + 2);
		int response = JOptionPane.showConfirmDialog(null, "Do you want to hit?", "", JOptionPane.YES_NO_OPTION);
		if(response == JOptionPane.YES_OPTION)
		{
			int number3 = new Random().nextInt(9);
			JOptionPane.showMessageDialog(null, number1 + number2 + number3 + 3);
			int score = 21 - number1 - number2 - number3 - 3;
		}
		else
		{
			JOptionPane.showMessageDialog(null, number1 + number2 + 2);
			int score = 21 - number1 - number2;
		}
		if(score < 21)
		{
			JOptionPane.showMessageDialog(null, "You were " + 21-score + " away");
		}
		else if(score > 21)
		{
			JOptionPane.showMessageDialog(null, "You lost by " + score-21);
		}
		else if(score == 21)
		{
			JOptionPane.showMessageDialog(null, "You win!");
		}
}
}
