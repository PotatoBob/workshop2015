import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;
import javax.swing.JTextField;

public class GUIRobot
{
	JFrame window;
	JPanel panel;
	JButton button;
	JTextField sides;
	JTextField sidelength;
	JTextField pensize;
	JTextField pencolor;
	JTextField speed;
	JLabel label1;
	JLabel label2;
	JLabel label3;
	JLabel label4;
	JLabel label5;

	public static void main(String[] args)
	{
		GUIRobot GR = new GUIRobot();
	}

	public GUIRobot()
	{
		window = new JFrame();
		window.setVisible(true);
		window.setResizable(true);
		panel = new JPanel();
		panel.setLayout(null);
		button = new JButton("Generate");

		label1 = new JLabel("Nubmer of sides");
		label1.setBounds(50, 50, 20, 30);
		sides = new JTextField("");
		sides.setBounds(100, 50, 20, 30);

		label2 = new JLabel("Length of side");
		label2.setBounds(50, 100, 20, 30);
		sidelength = new JTextField("");
		sidelength.setBounds(100, 100, 20, 30);

		label3 = new JLabel("Width of pen");
		label3.setBounds(50, 150, 20, 30);
		pensize = new JTextField("");
		pensize.setBounds(100, 150, 20, 30);

		label4 = new JLabel("Color of pen");
		label4.setBounds(50, 200, 20, 30);
		pencolor = new JTextField("");
		pencolor.setBounds(100, 200, 20, 30);

		label5 = new JLabel("Speed");
		label5.setBounds(50, 250, 20, 30);
		speed = new JTextField("");
		speed.setBounds(100, 250, 20, 30);

		panel.add(label1);
		panel.add(sides);

		panel.add(label2);
		panel.add(sidelength);

		panel.add(label3);
		panel.add(pensize);

		panel.add(label4);
		panel.add(pencolor);

		panel.add(label5);
		panel.add(speed);

		window.add(panel);

		window.setSize(1024, 768);
	}
}
