import java.io.FileReader;

public class ReadFromFile
{
	int x;

	public static void main(String[] args)
	{
		ReadFromFile RFF = new ReadFromFile();
	}

	ReadFromFile()
	{
		try
		{
			FileReader fr = new FileReader("Hi my name is Bob.txt");

			while (x != -1)
			{
				System.out.print((char) x);
				x = fr.read();
			}

		} catch (Exception e)
		{
			e.printStackTrace();
		}
	}

}
