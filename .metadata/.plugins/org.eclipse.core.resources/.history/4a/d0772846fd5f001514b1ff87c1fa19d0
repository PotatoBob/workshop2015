import java.io.FileReader;

public class ReadFromFile
{

	public static void main(String[] args)
	{
		try
		{
			FileReader fr = new FileReader("Hi my name is Bob.txt");
			// System.out.println((char) fr.read());
			while (fr.read() != -1)
			{
				System.out.print((char) fr.read());
			}

		} catch (Exception e)
		{
			e.printStackTrace();
		}
	}

}
