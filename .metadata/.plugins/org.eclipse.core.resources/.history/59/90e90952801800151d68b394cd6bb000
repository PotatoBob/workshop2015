import java.util.Random;

import javax.swing.JOptionPane;


public class Primitive_BlackJack
{
public static void main(String[] args)
{
		int newscore1 = 0;
		int newscore = 0;
		int score = 0;
		int number3 = 0;
		int number1 = new Random().nextInt(9);
		int number2 = new Random().nextInt(9);
		JOptionPane.showMessageDialog(null, number1 + number2 + 2);
		int response = JOptionPane.showConfirmDialog(null, "Do you want to hit?", "", JOptionPane.YES_NO_OPTION);
		if(response == JOptionPane.YES_OPTION)
		{
			number3 = new Random().nextInt(9);
			JOptionPane.showMessageDialog(null, number1 + number2 + number3);
			score = 21 - number1 - number2 - number3;
		}
		else
		{
			JOptionPane.showMessageDialog(null, number1 + number2 + 2);
			score = 21 - number1 - number2;
		}
		if(response == JOptionPane.YES_OPTION)
		{
			if(score < 21)
			{
				newscore = 21-score;
				JOptionPane.showMessageDialog(null, "You were " + newscore + " away");
			}
			else if(score > 21)
			{
				newscore1 = score-21;
				JOptionPane.showMessageDialog(null, "You lost by " + newscore1);
			}
			else if(score == 21)
			{
				JOptionPane.showMessageDialog(null, "You win!");
			}
		}
		else
		{
			if(score < 21)
			{
				newscore = 21-score;
				JOptionPane.showMessageDialog(null, "You were " + newscore + " away");
			}
			else if(score > 21)
			{
				newscore1 = score-21;
				JOptionPane.showMessageDialog(null, "You lost by " + newscore1);
			}
			else if(score == 21)
			{
				JOptionPane.showMessageDialog(null, "You win!");
			}
		}
}
}
